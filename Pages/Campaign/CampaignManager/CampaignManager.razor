                        TotalPages="@TotalPages"
                        TotalItems="@PagedCampaigns.Count"
                        PageSize="@PageSize"
                        OnPageChanged="ChangePage" />
        </div>
    }
    else
    {
        <div id="divCampignManagerDetails" class="card mt-3">
            <div class="card-body">
                <CampaignManagerDetailsMaster OnCancelClicked="HandleCancel" />
            </div>
        </div>
    }
}



